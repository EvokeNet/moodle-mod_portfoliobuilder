<div class="alert alert-info mt-4" role="alert">
    <h4 class="alert-heading">{{#str}}chooselayouttitle, mod_portfoliobuilder{{/str}}</h4>
    <hr>
    <p>{{#str}}chooselayoutsubtitle1, mod_portfoliobuilder{{/str}}</p>
    <p>{{#str}}chooselayoutsubtitle2, mod_portfoliobuilder{{/str}}</p>
</div>

<form action="{{config.wwwroot}}/mod/portfoliobuilder/layout.php" method="POST">
    <div class="d-none">
        <input type="hidden" name="id" value="{{cmid}}">
        <input type="hidden" name="courseid" value="{{courseid}}">
        <input type="hidden" name="sesskey" value="{{sesskey}}">
        <input type="hidden" name="action" value="save">
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="content border border-radius">
                <input name="layout" type="radio" value="timeline" id="layout-1" {{#istimeline}}checked{{/istimeline}} />
                <label for="layout-1">
                    <p class="mb-0">{{#str}}timeline, mod_portfoliobuilder{{/str}}</p>
                    <img class="img-responsive" src="{{config.wwwroot}}/mod/portfoliobuilder/pix/layouts/timeline/index.png" />
                    <a href="{{config.wwwroot}}/mod/portfoliobuilder/layoutpreview.php?id={{cmid}}&type=timeline" class="btn btn-sm btn-block btn-outline-primary mt-1 rounded-0"><i class="fa fa-eye"></i> {{#str}}previewthislayout, mod_portfoliobuilder{{/str}}</a>
                </label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="content border border-radius">
                <input name="layout" type="radio" value="mansory" id="layout-2" {{#ismansory}}checked{{/ismansory}} />
                <label for="layout-2">
                    <p class="mb-0">{{#str}}mansory, mod_portfoliobuilder{{/str}}</p>
                    <img class="img-responsive" src="{{config.wwwroot}}/mod/portfoliobuilder/pix/layouts/mansory/index.png" />
                    <a href="{{config.wwwroot}}/mod/portfoliobuilder/layoutpreview.php?id={{cmid}}&type=mansory" class="btn btn-sm btn-block btn-outline-primary mt-1 rounded-0"><i class="fa fa-eye"></i> {{#str}}previewthislayout, mod_portfoliobuilder{{/str}}</a>
                </label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="content border border-radius">
                <input name="layout" type="radio" value="blog" id="layout-3" {{#isblog}}checked{{/isblog}} />
                <label for="layout-3">
                    <p class="mb-0">{{#str}}blog, mod_portfoliobuilder{{/str}}</p>
                    <img class="img-responsive" src="{{config.wwwroot}}/mod/portfoliobuilder/pix/layouts/blog/index.png" />
                    <a href="{{config.wwwroot}}/mod/portfoliobuilder/layoutpreview.php?id={{cmid}}&type=blog" class="btn btn-sm btn-block btn-outline-primary mt-1 rounded-0"><i class="fa fa-eye"></i> {{#str}}previewthislayout, mod_portfoliobuilder{{/str}}</a>
                </label>
            </div>
        </div>
    </div>

    <div class="card card-body border mt-3">
        <button class="btn btn-primary" type="submit">{{#str}}savemypreferences, mod_portfoliobuilder{{/str}}</button>
    </div>
</form>