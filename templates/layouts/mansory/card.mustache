<div class="card-columns">
    {{#entries}}
        <div class="card border">
            {{#image}}
                <img class="card-img-top" src="{{config.wwwroot}}/mod/portfoliobuilder/pix/layouts/mansory/image{{image}}.jpg" alt="Card image top">
            {{/image}}
            <div class="card-body">
                <h4 class="card-title mb-0">{{title}}</h4>
                <p class="text-muted"><i class="far fa-clock" aria-hidden="true"></i>{{timecreated}}</p>
                {{#content}}
                    <p class="mb-0">{{{.}}}</p>
                {{/content}}
            </div>
        </div>
    {{/entries}}
</div>