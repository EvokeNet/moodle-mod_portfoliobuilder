<div class="mb-3 d-flex">
    <div class="left">
        <a href="{{config.wwwroot}}/mod/portfoliobuilder/submit.php?id={{cmid}}" class="btn btn-primary" data-action="create-entry-modal">
            <i class="fa fa-plus"></i> {{#str}}entry:add, mod_portfoliobuilder{{/str}}
        </a>
    </div>

    <div class="ml-auto">
        <a href="{{config.wwwroot}}/mod/portfoliobuilder/layout.php?id={{cmid}}" class="btn btn-dark"><i class="fa fa-edit"></i> Change layout</a>

        <div class="btn-group" role="group">
            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <i class="fa fa-share"></i> Share portfolio
            </button>
            <div class="dropdown-menu">
                <a
                    class="dropdown-item text-decoration-none"
                    href="http://facebook.com/sharer.php?u=#{{{encodedpublicurl}}}&t=Check out my portfolio on Evoke!"
                    onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600');return false;">
                        <i class="fa fa-facebook-square"></i> Facebook
                </a>
                <a
                    class="dropdown-item text-decoration-none"
                    href="http://twitter.com/share?url={{{encodedpublicurl}}}&text=Check out my portfolio on Evoke!""
                    onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=300,width=600');return false;">
                        <i class="fa fa-twitter-square"></i> Twitter
                </a>
                <a class="dropdown-item text-decoration-none" href="#"><i class="fa fa-linkedin-square"></i> Linkedin</a>
                <a id="share-url" class="dropdown-item text-decoration-none" href="{{config.wwwroot}}/mod/portfoliobuilder/portfolio.php?id={{cmid}}&userid={{userid}}"><i class="fa fa-globe"></i> Copy public URL</a>
            </div>
        </div>
    </div>
</div>

{{^hasentries}}
    <div class="alert alert-info mt-4" role="alert">
        <h4 class="alert-heading">Your portfolio is empty.</h4>
        <hr>
        <p>Dear student, you need to start building your portfolio, click on the above button to start adding entries to it.</p>
    </div>
{{/hasentries}}

{{#hasentries}}
    {{{entries}}}
{{/hasentries}}

{{#js}}
    require(['jquery', 'mod_portfoliobuilder/sweetalert'], function($, Swal) {
        $('.carousel').carousel({
            interval: 5000,
            pause: 'hover'
        });

        $("#share-url").click(function(event) {
            event.preventDefault();

            navigator.clipboard.writeText(event.currentTarget.href);

            var Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 8000,
                timerProgressBar: true,
                onOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer);
                    toast.addEventListener('mouseleave', Swal.resumeTimer);
                }
            });

            Toast.fire({
                icon: 'success',
                title: '{{#str}}linkccopiedtoclipboard, mod_portfoliobuilder{{/str}}'
            });
        });
    });
{{/js}}
