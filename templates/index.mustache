{{#hasgroupsmembers}}
    <div class="mb-2 p-2 border-radius border">
        <h3 class="h5">{{#str}}myteam, mod_portfoliobuilder{{/str}}</h3>
        {{#groupsmembers}}
            <div class="groupmember">
                <a href="{{config.wwwroot}}/local/evokegame/profile.php?id={{courseid}}&userid={{id}}">
                    <img src="{{userpicture}}" alt="{{fullname}}"> {{fullname}}
                </a>
            </div>
        {{/groupsmembers}}
    </div>

    <div class="card-columns columns-4">
        {{#groupsmembers}}
            <div class="card border border-radius profile-card-4 text-center">
                <div class="ribbon">{{layout}}</div>
                <img src="{{config.wwwroot}}/mod/portfoliobuilder/pix/layouts/{{layout}}/index.png" class="img img-responsive" alt="{{fullname}}">
                <div class="card-body py-4">
                    <div class="profile">
                        <img src="{{userpicture}}" class="img img-responsive userpicture" alt="{{fullname}}">
                    </div>
                    <p>{{fullname}}</p>
                    {{#lastentry}}
                        <div class="last-entry">
                            <div>
                                <span class="badge badge-secondary">Last entry</span>
                            </div>
                            <p class="mb-0">{{title}}</p>
                            <span class="text-muted"><i class="far fa-clock" aria-hidden="true"></i>{{timecreated}}</span>
                        </div>
                    {{/lastentry}}
                </div>
                <div class="card-footer">
                    <a href="{{config.wwwroot}}/mod/portfoliobuilder/portfolio.php?id={{courseid}}&u={{id}}">View portfolio</a>
                </div>
                <div class="card-footer">
                    <div class="d-flex flex-row">
                        <div class="flex-fill">
                            <p class="mb-0"><i class="fa fa-list-ol"></i> Entries</p>
                            <p class="mb-0">{{totalentries}}</p>
                        </div>
                        <div class="flex-fill">
                            <p class="mb-0"><i class="fa fa-thumbs-o-up"></i> Likes</p>
                            <p class="mb-0">{{totallikes}}</p>
                        </div>
                        <div class="flex-fill">
                            <p class="mb-0"><i class="fa fa-comment-o"></i> Comments</p>
                            <p class="mb-0">{{totalcomments}}</p>
                        </div>
                    </div>
                </div>

            </div>
        {{/groupsmembers}}
    </div>
{{/hasgroupsmembers}}
